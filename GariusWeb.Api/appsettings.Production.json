{
  "GoogleSecretManager": {
    "ProjectId": "garius-secret-manager"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://localhost:7223"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "labels": [
            {
              "Key": "app",
              "Value": "garius-api"
            },
            {
              "Key": "env",
              "Value": "prod"
            }
          ],
          "propertiesAsLabels": [ "RequestPath", "StatusCode" ],
          "batchPostingLimit": 500,
          "queueLimit": 5000,
          "period": "00:00:02"
        }
      }
    ]
  }
}
