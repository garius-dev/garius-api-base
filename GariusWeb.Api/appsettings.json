{
  "GoogleSecretManager": {
    "ProjectId": "garius-secret-manager"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://localhost:7223"
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "labels": [
            {
              "Key": "app",
              "Value": "garius-api"
            },
            {
              "Key": "env",
              "Value": "stag"
            }
          ],
          "propertiesAsLabels": [ "RequestPath", "ClientIP", "XForwardedFor", "CFConnectingIP", "UserAgent" ],
          "batchPostingLimit": 500,
          "queueLimit": 20000,
          "period": "00:00:02"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
